<view class="caregory-wrap">
  <view class="order-header" bindtap="handleOrderChange">
    <view class="by-sum {{ orderName === 'bysum' ? 'active' : '' }}" data-name="bysum">综合排序</view>
    <view class="by-price {{ orderName === 'byprice' ? 'active' : '' }}" data-name="byprice">
      按价格
    </view>
    <view class="by-count {{ orderName === 'bycount' ? 'active' : '' }}" data-name="bycount">按销量</view>
  </view>
  <view class='caregory'>
    <scroll-view class="nav_left" scroll-y>
      <block wx:for="{{navLeftItems}}" wx:key="index">
        <view class="nav_left_items {{curIndex == index ? 'nav_left_item-active' : ''}}" data-index="{{index}}" bindtap="currentTabs">
        {{item}}
        </view>
      </block>
    </scroll-view>
    <scroll-view class='nav_right' scroll-y>
      <block wx:for-items="{{navRightItems}}" wx:key="index">
        <view class="good-item-wrap">
            <view class="good-item">
              <view class="desc">
                <view class="title" bind:tap="gotoProductDetail">{{ item.title }}</view>
                  <view class="count">销量：{{ item.count }}</view>
                  <view class="price">
                    <view class="cur">
                          <!-- <rich-text nodes={{[{name: 'sub', children: [{type=""}]}]}}></rich-text> -->
                        <text class="money">￥</text>
                        <text class="num"> {{ item.curPrice }}</text>
                    </view>
                    <view class="old">￥{{ item.oldPrice }}</view>
                  </view>
                </view>
                <view class="operate">
                    <!-- <text class="price">￥{{ item.count }}</text> -->
                    <text class="icon icon-gouwuche" bindtap="showMinCart"></text>
                </view>
                <view class="image" bind:tap="gotoProductDetail">
                    <image src="{{item.image}}" mode="aspectFill" />
                </view>
            </view>
        </view>
    </block>
    </scroll-view>
  </view>
  <minCart show="{{ showCart }}" bind:onClose="onClose" btns="{{ btns }}" style="margin-bottom: 200rpx;" toastText="添加购物车成功"/>
</view>
