.confirm-order {
    width: 100%;
}
.confirm-order .header {
    height: 160rpx;
    background: #e74030;
}

.confirm-order .content {
    position: absolute;
    bottom: 88rpx;
    top: 0;
    right:  0rpx;
    left: 0rpx;
    padding: 0 30rpx;
    overflow: scroll;
}

.confirm-order .reveive-address .header {
    height: 80rpx;
    width: 100%;
    text-align: center;
    line-height: 80rpx;
    background: url("data:image/png;base64,");
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.reveive-address .header .title {
    color: #e74030;
} 

.reveive-address > .address {
    padding: 30rpx 20rpx;
    background: white;
}

.address .has-address {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.address .has-address .name-and-phone {
    display: flex;
    /* justify-content: space-between; */
}
.name-and-phone .name {
    margin-right: 20rpx;

}
.desc .address {
    color: #888888;
}
.address .has-address .desc {
    width: 80%;
}

.content .remark {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
    padding: 30rpx 0;
    padding-left: 20rpx;
    background: white;
}

.remark .label {
    width: 100rpx;
}
.remark .input-wrap {
    width: 100%;
}

.goods {
    margin-top: 20rpx;
    padding-top: 30rpx;
    background: white;
}

.good-list {
    padding-bottom: 100rpx;
    border-bottom: 1px dashed #888888;
}

.good-list .good-item-wrap {
    margin-top: 30rpx;
}

.good-item-wrap:first-child {
    margin-top: 0;
}

.offer {
    padding-bottom: 20rpx;
    border-bottom: 1px dashed #888888;
}
.full-reduce, .coupon {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
}

.offer .icon {
    font-size: 40rpx;
}

.offer .icon-zhekou {
    color: red;
}
.icon-quan1 {
    color: green;
}

.offer .label {
    display: flex;
    padding-left: 20rpx;
    align-items: center;
}
.label .icon {
    margin-right: 10rpx;
}
.offer .operate {
    padding-right: 20rpx;
    color: #888888;
}

.count-money {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 20rpx;
}

.count-money .count {
    color: #e74030;
}

