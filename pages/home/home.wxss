.container {
}
.search-container {
    position: fixed;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 20rpx 0;
    padding-right: 20rpx;
    width: 100%;
    left: 50%;
    top: 0;
    background: #d72205;
    transform: translateX(-50%);
    z-index: 1;
    transition:all .5s;
    align-items: center;
}
.search-container .logo {
  height: 90rpx;
  width: 250rpx;
}
.search-container .search-input {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 60rpx;
  border-radius: 30rpx;
}
.search-container input {
  display: inline-block;
  width: 80%;
  margin-right: 10rpx;
  color: gray;
  font-weight: bold;
}

.active .search-input {
    border: 1rpx solid #ccc;
}



.search-container .icon-sousuo{
    display: inline-block;
    color: gray;
    font-weight: bold;
}

.search-container .search-input {
    position: relative;
    background-color: white;
    padding-right: 10rpx;
    font-size: 24rpx;
    width: 60%;
    color:white;
}
.search-container  .location {
  flex: 1;
}

.location .province {
  display: inline-block;
}

.location .city {
  display: inline-block;
}

.location .region-picker {
  display: inline-block;
}



.place-holder {
    color: gray;
}


.swiper-container {
    width: 100%;
    height: 350rpx;
    margin-top: 100rpx;
}

.swiper-container swiper {
    width: 100%;
    height: 100%;
}

.swiper-container swiper image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

