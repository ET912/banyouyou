.page-margin{
  box-sizing: border-box;
  padding: 20rpx;
	margin-top: 20rpx;
  background-color: #fff;
  display: flex;
	flex-direction: column;
	align-items: center;
}
.hot-list {
  padding-left: 0;
  padding-right: 0;
}
.theme_img{
  width:180rpx;
  height:40rpx;
}

.theme_more{
  height: 40rpx;
}

.theme_more text{
  margin-right: 2px; 
  font-size:22rpx;
  font-weight: 700;
