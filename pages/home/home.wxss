.search-container {
    position: fixed;
    display: flex;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    width: 100%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
    transition:all .5s;
}

.active{
    background-color: rgba(255, 255, 255, 1);
    border-bottom: 1rpx solid #eee;
}

.active .search-input {
    border: 1rpx solid #ccc;
}

.active .search-input input {
    color: #aaa;
}

.search-container .search-icon{
    width: 40rpx;
    height: 40rpx;
}

.search-container .search-input {
    position: relative;
    flex: 1;
    margin: 0 30rpx;
    background-color: rgba(255,255,255,.5);
    /* border-radius: 240rpx; */
    font-size: 24rpx;
    padding: 2rpx 30rpx;
    padding-left: 60rpx;
    color:white;
}
.search-container  .location {
  flex: 1;
}

.location .province {
  display: inline-block;
}

.location .city {
  display: inline-block;
}

.location .region-picker {
  display: inline-block;
}
.search-container .search-input i{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

.search-container .search-input i image {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.place-holder {
    color: #e0e0e0;
}

.search-container .search-icon image {
    width: 100%;
    height: 100%;
    vertical-align: sub;
}

.swiper-container {
    width: 100%;
    height: 350rpx;
}

.swiper-container swiper {
    width: 100%;
    height: 100%;
}

.swiper-container swiper image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* 导航 */

