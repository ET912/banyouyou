.page-row{
}

.page-row .title-wrap {
  display: inline-block;
  vertical-align: middle;
  margin: 0 20rpx;
  margin-bottom: 20rpx;
  color: #d41c12;
}
.page-row .title {
  margin: 0 20rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #d41c12;
}

.hot-list{
  width:100%; 
  margin-top:10rpx;
  white-space: nowrap;
}

.hot-item {
  margin-right: 20rpx;
}

.hot-item .image {
  text-align: center;
}
.hot-item .image image {
  width: 220rpx;
  height: 235rpx;
  border-radius: 10rpx;
}

.hot-item .title {
  /* font-weight: 700; */
  font-size: 24rpx;
  text-align: center;
  color: #5f5b5b;

}

.hot-item .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot-item .price .cur {
  font-size: 0rpx;
  text-align: center;
}
.money, .num {
  display: inline-block;
  font-size: 35rpx;
  font-weight: 700;
  color: #d41c12;
}
.hot-item .price .cur .num {
  display: inline-block;
  font-size: 30rpx;
}
.price .old {
  color: #694a07;
  text-decoration: line-through;
}

.hot-item .count-and-cart {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hot-item .count-and-cart .cart .icon-gouwuche {
  font-size: 40rpx;
}

.page-column{
	display: flex;
	flex-direction: column;
	align-items: center;
  padding:20rpx;
}

.page-column image{
  width:170rpx;
  height:170rpx;
}

.page-column text{
  font-size:32rpx;
  color:#FF0000; 
  margin-top:10rpx;
}

.page-row .page_img{
  min-width: 240rpx;
  max-width: 375rpx;
  min-height: 202rpx;
  max-height: 292rpx;
}

