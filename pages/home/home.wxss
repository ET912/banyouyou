}

.hot-item .price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot-item .price .cur {
  font-size: 0rpx;
  text-align: center;
  font-weight: 700;
  color: #d41c12;
}
.hot-item .price .cur .money {
  display: inline-block;
  font-size: 30rpx;
}
.hot-item .price .cur .num {
  display: inline-block;
  text-align: left;
  font-size: 60rpx;
}
.hot-item .price .old {
  color: #694a07;
  text-decoration: line-through;
}

.hot-item .count-and-cart {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hot-item .count-and-cart .cart .icon-gouwuche {
  font-size: 40rpx;
}

.page-column{
	display: flex;
	flex-direction: column;
	align-items: center;
  padding:20rpx;
}

.page-column image{
  width:170rpx;
  height:170rpx;
}

.page-column text{
  font-size:32rpx;
  color:#FF0000; 
  margin-top:10rpx;
}

.page-row .page_img{
  min-width: 240rpx;
  max-width: 375rpx;
  min-height: 202rpx;
  max-height: 292rpx;
}

