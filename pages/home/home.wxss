.page-margin{
  box-sizing: border-box;
  padding: 20rpx;
	margin-top: 20rpx;
  background-color: #fff;
  display: flex;
	flex-direction: column;
	align-items: center;
}

.theme_img{
  width:180rpx;
  height:40rpx;
}

.theme_more{
  height: 40rpx;
}

.theme_more text{
  margin-right: 2px; 
  font-size:22rpx;
  font-weight: 700;
  color: #d41c12;
}

.theme_more image{
  width: 22rpx; 
  height:22rpx;
}

.page-row{
	display: flex;
	flex-direction: row;
	align-items: center;
  width:100%;
  justify-content:space-between;
}

.hot-list{
  width:100%; 
  margin-top:10rpx;
  white-space: nowrap;
}

.hot-item {
  margin-right: 20rpx;
}

.hot-item .image {
  text-align: center;
}
.hot-item .image image {
  width: 220rpx;
  height: 235rpx;
  border-radius: 3rpx;
}

.hot-item .title {
