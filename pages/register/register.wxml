<view class="register">
    <view class="form-wrap">
        <form action="">
            <view class="form-item">
                <text class="icon icon-yonghu"></text>
                <input type="text" placeholder-class="placeholder" placeholder="用户名/邮箱" />
            </view>
            <view class="form-item">
                <text class="icon icon-shouji"></text>
                <input type="text" placeholder-class="placeholder" placeholder="请输入手机号" />
            </view>
            <view class="form-item sms">
                <text class="icon icon-pinglun"></text>
                <input type="text" placeholder-class="placeholder" placeholder="请输入验证码" />
                <view class="send-sms">发送验证码</view>
            </view>
            <view class="form-item">
                <text class="icon icon-mima"></text>
                <input type="text" placeholder-class="placeholder" placeholder="字母+字数,至少八位数密码" />
            </view>
            <view class="form-item">
                <text class="icon icon-mima"></text>
                <input type="text" placeholder-class="placeholder" placeholder="请重复输入密码" />
            </view>
            <view class="form-item">
                <text class="icon icon-credentials_icon"></text>
                <input type="text" placeholder-class="placeholder" placeholder="身份证号码" />
            </view>
        </form>
        <view class="form-error">
            错误文案
        </view>
    </view>
    <view class="private-policy">
        <icon type="success" size="20" color="{{policyStatus}}"/>
        <text class="desc">我已知晓并同意</text>
        <text class="link">《板优优账号说明/隐私政策》</text>
    </view>
    <view class="button-wrap">
        <view class="button">注册</view>
    </view>
    <view class="to-login">
        <text>已有账号，</text>
        <text class="link">去登录</text>
    </view>
</view>