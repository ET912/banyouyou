<view class='cart'>
  <view class='empty_wrap' wx:if='{{cartList.length == 0}}'>
    <image class='empyt_icon' src='/image/shop_cart.png'></image>
    <text class='empyt_txt'>购物车空空如也，去逛逛吧~</text>
  </view>
  <view wx:else class='section'>
    <view class="header">
      <checkRadio class="select-all" catch:change="selectAll" checked="{{selectAll}}"></checkRadio>
      <text class="icon icon-shanchu"></text>
    </view>
    <block wx:for='{{cartList}}' wx:key="index">
      <view class="good_list {{item.isTouchMove ? 'touch-move-active' : ''}}" catchtap='gotoProductDetail' data-index="{{index}}"bindtouchstart="touchstart" bindtouchmove="touchmove">
        <view class='content'>
          <checkRadio 
            class="select-single"
            data-index="{{index}}"
            catch:change="selectProduct" 
            checked="{{ item.select }}" /> 
          <view class='goods'>
            <image class='good_img' src='/image/quick3.jpg'></image>
            <view class='good_info'>
              <view class='good_title'>
                <text>{{item.title}}</text>
              </view>
              <!-- 商品属性 -->
              <view class="good_attr">
                <text class="desc">i7 16G+512G, 15英寸</text>
                <text class="icon icon-arrowBottom" catch:tap="showMinCart"></text>
              </view>
              <view class='good_price'>
                <text class='price'>{{item.price}}</text>
                <!-- 商品数量 -->
                <count bind:getSelectNum="getCartCount" data-index="{{index}}" count="{{item.total}}" bind:addEvent="addNums" bind:subEvent="subNums" />
              </view>
            </view>
          </view>
          <!-- 删除 -->
          <view class='del' catchtap="del" data-index="{{index}}">删除</view>
        </view>
      </view>
    </block>
    <view class='fixBar'>
      <view class='total'>
        <text>合计:</text>
        <text class='money'>¥{{totalMoney}}</text>
      </view>
      <view class='btn_amount'>
        <button>去结算({{totalCount}})</button>
      </view>
    </view>
    </view>
    <minCart show="{{ showCart }}" bind:onClose="onClose" btns="{{ btns }}" style="margin-bottom: 200rpx;"/>
  </view>