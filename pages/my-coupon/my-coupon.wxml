<view class="coupon-box" style="height: 100%;">
  <view class="coupon-container">
    <view class="coupon-tab" bindtap="tabContent">
      <text class="coupon-tab-item {{ tabIndex === 0 && 'coupon-active'}}" data-item="{{0}}">未使用(0)</text>
      <text class="coupon-tab-item {{ tabIndex === 1 && 'coupon-active'}}" data-item="{{1}}">已使用(0)</text>
      <text class="coupon-tab-item {{ tabIndex === 2 && 'coupon-active'}}" data-item="{{2}}">已过期(0)</text>
    </view>
    <swiper current="{{tabIndex}}" style="flex: 1;" class='coupon-Swiper' duration="200" bindchange="changeTabIndex">
      <swiper-item>
        <scroll-view scroll-y="{{true}}" style="height: 100%;">
          <view class="coupon-content" wx:if="{{ true }}">
            <couponItem/>
          </view>
        </scroll-view>
      </swiper-item>
      <swiper-item>
        <scroll-view scroll-y="{{true}}" style="height: 100%;">
          <view class="coupon-content" wx:if="{{ true }}">
            <couponItem/>
          </view>
        </scroll-view>
      </swiper-item>
      <swiper-item>
        <scroll-view scroll-y="{{true}}" style="height: 100%;">
          <view class="coupon-content" wx:if="{{ true }}">
            <couponItem/>
          </view>
        </scroll-view>
      </swiper-item>
    </swiper>
  </view>
</view>
