/* pages/orderdetail/orderdetail.wxss */
.orderdetail-status-box {
  background: #e74030;
  padding: 30rpx 20rpx;
}

.orderdetail-status {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  padding-bottom: 10rpx;
}

.orderdetail-time {
  color: #fff;
}

.orderdetail-address {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.orderdetail-address-desc {
  padding-left: 20rpx;
}

.orderdetail-address-desc-detail {
  color: #868686;
  line-height: 50rpx;
}

.orderdetail-detail {
  padding: 30rpx 0 0;
  background: #fff;
  margin-bottom: 20rpx;
}

.orderdetail-fare {
  display: flex;
  justify-content: space-between;
  padding-bottom: 30rpx;
  padding: 30rpx 20rpx;
}

.dash-divider {
  border-top: 2rpx dashed #f3f3f3;
  height: 0;
  width: 100%;
}

.orderdetail-total {
  display: flex;
  justify-content: flex-end;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.orderdetail-supplement {
  background: #fff;
  padding: 30rpx 20rpx;
  line-height: 52rpx;
}

.orderdetail-supplement-leaveMessage {
  margin-bottom: 20rpx;
}

.color {
  color: #868686;
}

.contact-merchant {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.contact-merchant-btn {
  border: 2rpx solid #868686;
  border-radius: 5rpx;
  width: 220rpx;
  text-align: center;
  height: 60rpx;
  line-height: 55rpx;
}

.orderdetail-blank {
  background: #fff;
  /* flex: 1; */
  height: 88rpx;
  margin-top: 20rpx;
}

.good-list .good-item-wrap {
    margin-top: 10rpx;
}

.good-item-wrap:first-child {
    margin-top: 0;
}

.orderdetail-information-pay-money .pay-money-wrap {
  display: inline-block;
  vertical-align: top;
}

.orderdetail-information-pay-money .money {
  color: #d46734;
}

.bottom-operate {
  display: flex;
  justify-content: space-between;
  flex-direction: row-reverse;
  /* align-items: center; */
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: white;
}

.bottom-operate view {
  width: 25%;
  text-align: center;
  color: white;
  background: #e74030;
}