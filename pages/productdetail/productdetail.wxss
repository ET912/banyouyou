/* pages/productdetail/productdetail.wxss */
.productdetail-swiper {
  /* height: 500rpx; */
  width: 100%;
  position: relative;
}

.swiper-item {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  height: 40rpx;
  width: 100rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
}

.productdetail-desc {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  margin: 10rpx 0;
}

.productdetail-price {
  margin: 15rpx 0;
}

.productdetail-current-price {
  margin-right: 20rpx;
  color: #F00;
}

.productdetail-original-price {
  font-size: 24rpx;
  color: #888;
  text-decoration:line-through;
}

.productdetail-stock, .productdetail-sales {
  color: #888;
  margin-right: 20rpx;
  font-size: 24rpx;
}

button[plain] { 
  border:0;
  margin: 0;
  padding: 0;
  line-height: 1.1;
}

.productdetail-popup {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.productdetail-sku {
  height: 50rpx;
  background: #fff;
  padding: 20rpx;
}
