.login-wrap {
    padding: 0 70rpx;
}

.form-item {
    /* display: flex; */
    width: 100%;
    padding: 40rpx 0 10rpx 0;
    border-bottom: 1px solid gray;
    vertical-align: middle;
    color: #c2c2c2;
}
.form-item text, view, input {
    display: inline-block;
    vertical-align: middle;
}

.form-item input {
    width: 500rpx;
}
.form-item .icon {
    margin-right: 35rpx;
    font-size: 40rpx;
}

.form-item.sms input {
    width: 300rpx;
}
.placeholder {
    color: #c2c2c2;
}

.button-wrap {
    margin: 0 auto;
}
.button-wrap .button {
    margin-top: 110rpx;
    text-align: center;
    line-height: 90rpx;
    height: 90rpx;
    width: 600rpx;
    border-radius: 50rpx;
    color: white;
    background: #e9452c;
}

.to-register {
    margin-top: 20rpx;
    width: 100%;
    text-align: center;
    color: #e9452c;
}

.to-register .link {
    cursor: pointer;
    text-decoration: underline;
}

.nick-and-photo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 500rpx;
}

.nick-and-photo .photo {
    margin-bottom: 40rpx;
}