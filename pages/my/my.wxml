<!-- index.wxml -->
<view class="my">
  <view class="header" bindtap="goMember">
    <view class="photo">
        <image src="/image/banner2.jpg"></image>
    </view>
    <view class="name-and-phone">
      <view class="name">{{ user.Name }}</view>
      <view class="phone">
        <text class="icon icon-shouji2"></text>
        <text class="number">{{ user.Phone }}</text>
      </view>
    </view>
    <view class="to-user-detail">
      <text class="icon icon-youjiantou"></text>
    </view>
  </view>
  <view class="my-order" >
    <view class="title">
      <view>我的订单</view>
      <view>
        <text>查看全部</text>
        <text class="icon icon-gengduo"></text>
      </view>
    </view>
    <view class="nav-items">
      <view wx:for="{{orderNavItems}}" class="nav-item" bind:tap="toMyorder" data-url="{{ item.url }}">
        <view>
          <text class="{{ item.icon }}"></text>
        </view>
        <view>{{ item.name }}</view>
      </view>
    </view>
  </view>
  <view class="my-distribute" bind:tap="toDistribute">
    <view class="wrap">
        <view class="left">
          <text class="icon icon-VIP"></text>
          <text>我的分销1</text>
        </view>
        <view class="right">
          <text class="desc" wx:if="{{ user.IsDistribution === 0 }}">联系我们加入分销商</text>
          <text class="icon icon-youjiantou"></text>
        </view>
    </view>
  </view>
  <view class="my-serve">
    <view class="serve-item" wx:for-items="{{serveItems}}" wx:key="index">
      <text class="{{ item.icon }}"></text>
      <navigator class="navigator" hover-class="none" url="{{item.url}}">
       <text class="title">{{ item.name }}</text>
       <text class="icon icon-youjiantou"></text>
      </navigator>
    </view>
  </view>
  <view class="my-helper"></view>
</view>