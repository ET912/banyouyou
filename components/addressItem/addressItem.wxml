<!--components/addressItem/addressItem.wxml-->
<radio-group bindchange="radioChange">
  <view class="address-item-container">
    <view class="address-item-header">
      <text class="address-item-name">{{ addressInfo.Person }} </text>
      <text class="address-item-sex">{{ addressInfo.Sex }} </text>
      <text class="address-item-phoneNumber">{{ addressInfo.Phone }} </text>
      <tag type= "success" class="address-item-tag">{{ addressInfo.Category }}</tag>
    </view>
    <view class="address-item-desc">{{ addressInfo.Address + addressInfo.Other }}</view>
    <view class="divider"></view>
    <view class="address-item-footer">
      <radio checked="{{ addressInfo.IsDefault }}" style="color: #757575;font-size: 28rpx;" value="{{1}}">设为默认</radio>
      <view class="address-item-footerRight">
        <view style="width: 140rpx;" bind:tap="editAddress">
          <text class="icon icon-xiepinglun"></text>
          <text> 编辑</text>
        </view>
        <view bind:tap="deleteAddress">
          <text class="icon icon-shanchu"></text>
          <text> 删除</text>
        </view>
      </view>
    </view>
  </view>
</radio-group>